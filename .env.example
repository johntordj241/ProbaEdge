# Copiez ce fichier vers .env (non versionné) et renseignez vos secrets locaux.

# API Football (obligatoire)
API_FOOTBALL_KEY=your-api-football-key
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# OpenWeather (optionnel mais requis pour la météo)
OPENWEATHER_API_KEY=your-openweather-key

# OpenAI (optionnel mais requis pour les analyses IA)
OPENAI_API_KEY=your-openai-key

# Supabase (optionnel)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Notifications / Social (optionnel)
SOCIAL_X_TOKEN=
SOCIAL_DISCORD_TOKEN=
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Pour charger un fichier .env différent, définissez FOOTBALL_APP_ENV_FILE=/chemin/vers/.env
